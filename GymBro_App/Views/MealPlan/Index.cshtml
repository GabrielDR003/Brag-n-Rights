@model GymBro_App.ViewModels.MealPlanView?
@{
    ViewData["Title"] = "Meal Plan";
}


<p>Welcome to the Meal Plan page!</p>
<form method="post" asp-action="Index">
    <button type="submit" class="btn btn-primary">Create Meal Plan</button>
</form>
<hr>
<a asp-action="CreateMeal"><button class="btn btn-primary">Add Food</button></a>
<hr>
@if(Model != null && Model.MealNames != null && Model.Foods != null){
    <h2>Meals</h2>
    <ol>
        @for(int i = 0; i < Model.MealNames.Count; i++)
        {
            <li>
                    <h3>@Model.MealNames[i]</h3>
                    @for(int j = 0; j < Model.Foods[i].Count; j++)
                    {
                        <p data-api-id="@Model.Foods[i][j]">@j</p>
                    }
            </li>
        }
    </ol>
}


<script src="~/js/mealDisplay.js" asp-append-version="true"></script>